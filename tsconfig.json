{
  "compilerOptions": {
    "target": "ES2019",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "inlineSourceMap": true,
    "newLine": "lf",
    "pretty": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "disableSizeLimit": true,
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "types": ["node"],
    "removeComments": true
  },
  "exclude": ["./dist/", "./tests/"],
  "typedocOptions": {
    "name": "Lavaclient",
    "readme": "./README.md",
    "out": "docs",
    "hideGenerator": true
  }
}
