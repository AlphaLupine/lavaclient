{
  "exclude": ["./node_modules", "./dist"],
  "include": ["./src/**/*"],
  "compilerOptions": {
    /* Basic */
    "lib": ["ES2019"],
    "target": "ES2019",
    "module": "CommonJS",
    "skipLibCheck": true,

    /* Compiling */
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,

    /* Strict Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Types */
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,

    /* Module Resolution */
    "esModuleInterop": true
  }
}
